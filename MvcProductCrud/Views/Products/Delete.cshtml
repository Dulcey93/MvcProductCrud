@model MvcProductCrud.ViewModels.ProductDeleteViewModel

@{
    ViewData["Title"] = "Eliminar Producto";
}

<h2 class="text-danger">¿Estás seguro de que deseas eliminar este producto?</h2>

<div class="card shadow-sm p-4 mt-3">
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.ImagePath" class="img-fluid rounded border" alt="Imagen del producto" />
        </div>
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-4">Nombre</dt>
                <dd class="col-sm-8">@Model.Name</dd>

                <dt class="col-sm-4">Precio</dt>
                <dd class="col-sm-8">@Model.Price.ToString("C")</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Eliminar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
</div>
