@model MvcProductCrud.ViewModels.ProductDetailsViewModel

@{
    ViewData["Title"] = "Detalles del Producto";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <dl class="dl-horizontal">
            <dt>Nombre</dt>
            <dd>@Model.Name</dd>
            <dt>Precio</dt>
            <dd>@Model.Price</dd>
            <dt>Descripción</dt>
            <dd>@Model.Description</dd>
            <dt>Fecha de Lanzamiento</dt>
            <dd>@Model.ReleaseDate</dd>
            <dt>Imagen</dt>
            <dd>
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <img src="@Model.ImagePath" alt="Imagen del producto" style="max-width: 200px;" />
                }
            </dd>
        </dl>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>
