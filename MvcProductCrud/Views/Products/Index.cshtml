@model IEnumerable<MvcProductCrud.ViewModels.ProductListViewModel>

@{
    ViewData["Title"] = "Lista de Productos";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Crear Nuevo Producto</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Imagen</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>
                    @if (!string.IsNullOrEmpty(product.ImagePath))
                    {
                        <img src="@product.ImagePath" alt="Imagen del producto" style="max-width: 50px;" />
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-info">Ver</a>
                    <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-primary">Editar</a>
                    <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
